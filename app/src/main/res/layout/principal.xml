<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.simon.Interfaces.Principal"
    tools:showIn="activity_principal">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:text="Temperatura"
        app:layout_constraintBottom_toBottomOf="@+id/edit_temp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="PosiciÃ³n"
        app:layout_constraintBottom_toBottomOf="@+id/edit_posicion"

        app:layout_constraintStart_toStartOf="@+id/textView" />


    <EditText
        android:id="@+id/edit_posicion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="32dp"
        android:focusable="false"
        android:inputType=""
        android:labelFor="@+id/edit_posicion"
        android:textAlignment="viewEnd"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_dor"
        app:layout_constraintEnd_toEndOf="@+id/edit_temp"
        app:layout_constraintStart_toStartOf="@+id/edit_temp" />

    <EditText
        android:id="@+id/edit_temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="64dp"
        android:focusable="false"
        android:inputType=""
        android:labelFor="@+id/edit_temp"
        android:textAlignment="viewEnd"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_posicion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView" />


    <EditText
        android:id="@+id/edit_ppm"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:focusable="false"
        android:inputType=""
        android:labelFor="@+id/edit_ppm"
        android:textAlignment="viewEnd"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />


    <EditText
        android:id="@+id/edit_dor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="64dp"
        android:focusable="false"
        android:inputType=""
        android:labelFor="@+id/edit_dor"
        android:textAlignment="viewEnd"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/edit_posicion"
        app:layout_constraintStart_toStartOf="@+id/edit_posicion" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:focusable="false"
        android:text="PPM"
        app:layout_constraintBottom_toBottomOf="@+id/edit_ppm"
        app:layout_constraintStart_toEndOf="@+id/edit_ppm" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:srcCompat="@mipmap/corazon" android:contentDescription="todo1" />


</android.support.constraint.ConstraintLayout>
